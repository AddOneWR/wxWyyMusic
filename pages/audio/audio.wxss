page,.body{
    height: 100%;
}
.sing-brief{
    position: absolute;
    left:10px;
    top: 10px;
    color: #BB4E55;
}
.sing-name{   
    font-size: 20px;
    font-weight: 600;
    font-family: "Arial","Microsoft YaHei","黑体","宋体",sans-serif;
}
.singer-name{
    font-size: 12px;
}
.sing-show{
    position: relative;
    width: 100%;
    height:85%;
    display: flex;
    justify-content: center;
    align-items: center;
    
}
.coverImgStick{
  position: absolute;
  top: 15%;
  left: 50%;
  width: 100rpx;
  height:130rpx;
  transform: translate(-20%,-50%) rotate(-20deg);
  transform-origin: top;
}
.coverImgBg{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: -1;
    width: 500rpx;
    height: 500rpx;
    border-radius: 50%;
}
.coverImg{
    width: 400rpx;
    height: 400rpx;
    border-radius: 50%;
}
.course-control-process{
    height:15%;
    display: flex;
    width: 100%;
    flex-direction: column;
}
.process{
    font-size:12px;
    display: inline-block;
    margin:10px 0;
    color: rgb(78,78,78);
}
.current-process{
    color: white;
}
slider{
    display: inline-block;
    width: 60%;
    margin:10px 15px 10px 18px;
}
.control-view{
    width: 100%;
    display: flex;
    justify-content: center;
}
.control-bottom view{
    margin:5px 20px;
}
.control-bottom image{
    width: 64rpx;
    height: 64rpx;
}
.control-bottom-view{
    display: flex;
    justify-content: center;
    align-items: center;
}
 .type image{
    float:bottom;
    width:48rpx;
    height: 48rpx;
}
.lrcView{
    display: flex;
    flex-direction: column;
    overflow: hidden;
    height: 70%;
    text-align: center;
}
.lrc{
    font-size:15px;
    margin-top: 13px;
}
.lrcActive{
    font-size:20px;
    color:white;
}
.bg{
    position: absolute;
    left:0;
    top: 0;
    z-index: -10;
    width: 100%;
    height: 100%;
    background:  no-repeat left top;
     background-size: 110% 110%;  
    background-color: rgba(63,63,62,0.1);
    filter: blur(20px);
}